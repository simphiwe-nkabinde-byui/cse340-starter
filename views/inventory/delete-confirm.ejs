<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>

<div id="error-messages">
  <% if (errors) { %>
  <ul class="error">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
</div>

<p>Confirm Deletion - The delete is permanent.</p>
<form class="form form--inventory" action="/inv/delete" method="post">
    <div>
        <label>Make<input readonly type="text" minlength="2" name="inv_make" required value="<%= locals.inv_make %>" ></label>
        <label>Model<input readonly type="text" minlength="2" name="inv_model" required value="<%= locals.inv_model %>" ></label>
        <label>Year<input readonly type="number" min="1885" max="2025" name="inv_year" required value="<%= locals.inv_year %>"></label>
        <label>Price<input readonly type="number" min="0" name="inv_price" required value="<%= locals.inv_price %>"> </label> 
        <input type="submit" value="Delete Vehicle">  
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </div>
</form>